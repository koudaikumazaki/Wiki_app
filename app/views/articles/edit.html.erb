<h2 class="text-2xl text-center my-10">保存した記事を編集する</h2>

<div class="mb-10">
  <%= form_with model: @article do |f| %>
    <div class="my-10 w-11/12 mx-auto">
      <h4 class="text-2xl my-5">タイトル</h4>
      <%= f.text_field :title, value: @article.title, class: 'w-full p-3' %>
    </div>
    <div class="my-10 w-11/12 mx-auto">
      <h4 class="text-2xl my-5">URL</h4>
      <%= f.text_field :url, value: @article.url, class: 'w-full p-3' %>
    </div>
    <div class="my-10 w-11/12 mx-auto">
      <h4 class="text-2xl my-5">本文</h4>
      <%= f.text_area :content, value: @article.content, class: "h-96 w-full p-3" %>
    </div>
    <div class="my-10 w-11/12 mx-auto">
      <%= f.submit '本文を保存する', class: 'w-full p-3 bg-gray-500 text-white' %>
    </div>
  <% end %>
</div>